<%= flash[:alert] %>

<h1>Login form</h1>


  <%= form_with(scope: :session, url: login_path,  local: true) do |f| %> <%# here it will give a post request to login path triggering create action%>
    <div>
      <%= f.label :email %>
      <div class="col-10"> 
        <%= f.email_field :email, placeholder: "Enter your email address" %>
      </div>
    </div>

    <div>
      <%= f.label :password %>
      <div> 
        <%= f.password_field :password, placeholder: "Enter your password" %>
      </div>
    </div>

    <div>
      <%= f.submit "Log in" %>
    </div>
  <% end %>

