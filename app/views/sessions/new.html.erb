<h1>Login form</h1>

<% http_method = @user.new_record? ? "POST" : "PATCH" %>
<% action_url = @user.new_record? ? users_url : user_url(@user) %>



  <%= form_with(scope: :session, url: login_path,  local: true) do |f| %>
    <div>
      <%= f.label :email %>
      <div class="col-10"> 
        <%= f.email_field :email, placeholder: "Enter your email address" %>
      </div>
    </div>

    <div>
      <%= f.label :password %>
      <div> 
        <%= f.password_field :password, placeholder: "Enter your password" %>
      </div>
    </div>

    <div>
      <%= f.submit "Log in" %>
    </div>
  <% end %>


<form session method="POST">
     <input type="hidden" name="_method" value="<%= http_method %>">


    <label for="name">Name</label>
    <input id="name" type="text" name = user[name]></input>
    <br>
  
    <label for="email">Email</label>
    <input id="email" type="text" name = user[email]></input>
    <br>
  
    <label for="password">Password</label>
    <input id="password" type="password" name = user[password]></input>
    <br>
    
    <input id="submit" type="submit" value="<%=  @user.new_record? ? "Sign up" : "Update account"%>"></input>
    <br>



</form>