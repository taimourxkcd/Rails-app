
<% http_method = @user.new_record? ? "POST" : "PATCH" %>
<% action_url = @user.new_record? ? users_url : user_url(@user) %>

<form action="<%=action_url%>" method="POST">
     <input type="hidden" name="_method" value="<%= http_method %>">


    <label for="name">Name</label>
    <input id="name" type="text" name = user[name]></input>
    <br>
  
    <label for="email">Email</label>
    <input id="email" type="text" name = user[email]></input>
    <br>
  
    <label for="password">Password</label>
    <input id="password" type="password" name = user[password]></input>
    <br>
    
    <input id="submit" type="submit" value="<%=  @user.new_record? ? "Sign up" : "Update account"%>"></input>
    <br>



</form>